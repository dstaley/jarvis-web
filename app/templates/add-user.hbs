<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add User</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="inputFirstName" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-3">
        {{input type="text" value=name classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastName" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-3">
        {{input type="text" value=email classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            {{input type="checkbox" name="is_admin" checked=is_admin}} Has Admin Privileges
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary" {{action 'createUser'}}>Create</button>
      </div>
    </div>
  </form>
</div>