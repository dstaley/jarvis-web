<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Kits
      {{#link-to 'add-kit'}}<button class="btn btn-primary pull-right">Add Kit</button>{{/link-to}}
    </h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      {{#sortable-table}}
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Available</th>
          </tr>
        </thead>
        <tbody>
          {{#each kit in model.kits}}
            <tr>
              <td>{{#link-to 'kit' kit.id}}{{kit.name}}{{/link-to}}</td>
              <td>{{#link-to 'kit' kit.id}}{{kit.type}}{{/link-to}}</td>
              <td>{{#link-to 'kit' kit.id}}{{kit.status}}{{/link-to}}</td>
              <td>{{#link-to 'kit' kit.id}}
              {{#if kit.available}}Available{{else}}Unavailable{{/if}}
              {{/link-to}}</td>
            </tr>
          {{/each}}
        </tbody>
      {{/sortable-table}}
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.col-lg-12 -->
</div>
