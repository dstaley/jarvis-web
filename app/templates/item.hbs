<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">{{item.name}}
        {{#link-to 'edit-item' item.id}}
        	<button class="btn btn-primary pull-right">Edit</buton>
        {{/link-to}}
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <h3>Type: {{item.type}}</h3>
	    <h3>Serial: {{item.serial}}</h3>
	    <h3>Condition: {{item.condition}}</h3>
	    <h3>Status: {{item.status}}</h3>
	    <h3>Last Price Paid: {{item.last_price_paid}}</h3>
	    <h3>Availability: {{#if item.available}}Available{{else}}Unavailable{{/if}}</h3>
	    <h3>Location: {{item.location.name}}</h3>
	    <h3>Kit: {{#link-to 'kit' item.kit.id}}{{item.kit.name}}{{/link-to}}</h3>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Checkouts</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <div class="table-responsive">
	        <table class="table table-striped table-bordered table-hover">
	            <thead>
	                <tr>
	                    <th>Person</th>
	                    <th>Checkout Date</th>
	                    <th>Due Date</th>
	                    <th>Return Date</th>
	                    <th>Returned By</th>
	                </tr>
	            </thead>
	            <tbody>
	                {{#each checkout in checkouts.checkout_items}}
	                	<tr>
	                		<td>{{#link-to 'checkout' checkout.checkout.id}}{{checkout.checkout.patron.name}}{{/link-to}}</td>
	                		<td>{{moment checkout.checkout.checkout_date}}</td>
	                		<td>{{ago checkout.checkout.due_date}}</td>
	                		<td>{{#if checkout.return_date}}{{moment checkout.return_date}}{{/if}}</td>
	                		<td>{{checkout.returned_by}}</td>
	                	</tr>
	                {{/each}}
	            </tbody>
	        </table>
	    </div>
	    <!-- /.table-responsive -->
	</div>
	<!-- /.col-lg-12 -->
</div>