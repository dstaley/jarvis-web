<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Items
        {{#link-to 'add-item'}}<button class="btn btn-primary pull-right">Add Item</button>{{/link-to}}
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <div class="table-responsive">
	        {{#sortable-table}}
	            <thead>
	                <tr>
	                    <th>Name</th>
	                    <th>Type</th>
	                    <th>Status</th>
	                    <th>Kit</th>
	                </tr>
	            </thead>
	            <tbody>
	                {{#each item in model.items}}
	                	<tr>
	                		<td>{{#link-to 'item' item.id}}{{item.name}}{{/link-to}}</td>
	                		<td>{{#link-to 'item' item.id}}{{item.type}}{{/link-to}}</td>
	                		<td>{{#link-to 'item' item.id}}
	                		{{#if item.available}}Available{{else}}Unavailable{{/if}}
	                		{{/link-to}}</td>
	                		<td>{{#link-to 'kit' item.kit.id}}
	                		{{#if item.kit}}{{item.kit.name}}{{/if}}
	                		{{/link-to}}</td>
	                	</tr>
	                {{/each}}
	            </tbody>
	        {{/sortable-table}}
	    </div>
	    <!-- /.table-responsive -->
	</div>
	<!-- /.col-lg-12 -->
</div>