<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Return Items in {{model.checkout.kit.name}}</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Checkout Items</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<form class="form-horizontal" role="form">
		{{#each item in proxiedItems}}
			<div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <div class="checkbox">
			        <label>
			        {{input type="checkbox" name=item.id checked=item.checked}}
			        {{item.name}}
			        </label>
			      </div>
			    </div>
			  </div>
		{{/each}}
	</form>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">{{model.checkout.kit.name}} Availability</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<form class="form-horizontal" role="form">
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						{{input type="checkbox" checked=makeAvailable}} Make {{model.checkout.kit.name}} available for checkout
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
		    <button type="submit" class="btn btn-primary" {{action 'returnItems'}}>Return</button>
		  </div>
		</div>
	</form>
</div>