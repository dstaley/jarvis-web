<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add Kit</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="inputFirstName" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-3">
        {{input type="text" value=name classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastName" class="col-sm-2 control-label">Type</label>
      <div class="col-sm-3">
        {{input type="text" value=type classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastName" class="col-sm-2 control-label">Status</label>
      <div class="col-sm-3">
        {{input type="text" value=status classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="inputLastName" class="col-sm-2 control-label">Location</label>
      <div class="col-sm-3">
        {{view "select" content=model.locations optionValuePath="content.id" optionLabelPath="content.name" value=location prompt="Please select a location" classNames="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            {{input type="checkbox" name="needs_permission" checked=needs_permission}} Needs Permission
          </label>
        </div>
      </div>
    </div>
    {{#if needs_permission}}
      <div class="form-group">
        <label for="inputLastName" class="col-sm-2 control-label">Permission Statement</label>
        <div class="col-sm-3">
          {{textarea value=permission_statement cols="80" rows="6" classNames="form-control"}}
        </div>
      </div>
    {{/if}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button {{bind-attr disabled=createDisabled}} type="submit" class="btn btn-primary" {{action 'createKit'}}>Create</button>
      </div>
    </div>
  </form>
</div>