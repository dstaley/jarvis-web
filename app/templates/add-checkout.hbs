<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Checkout {{model.kit.name}}</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<form class="form-horizontal" role="form">
	  <div class="form-group">
	    <label for="inputLastName" class="col-sm-2 control-label">Person</label>
	    <div class="col-sm-3">
	      {{select-2 content=model.people.people optionLabelPath="full_name" optionDescriptionPath="mylsu_id" optionValuePath="id" value=person placeholder="Please choose someone"}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputLastName" class="col-sm-2 control-label">Due Date</label>
	    <div class="col-sm-3">
	      {{date-picker date=dueDate valueFormat='date' classNames="form-control"}}
	    </div>
	  </div>
	</form>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Items in {{model.kit.name}}</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<form class="form-horizontal" role="form">
		{{#each item in proxiedItems}}
			<div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <div class="checkbox">
			        <label>
			          {{#if item.available}}
			          	    			{{input type="checkbox" name=item.id checked=item.checked}}
			          	    		{{else}}
			          	    			{{input type="checkbox" name=item.id disabled=true}}
			          	    		{{/if}}
			          	    		{{item.name}}
			        </label>
			      </div>
			    </div>
			  </div>
		{{/each}}
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
		    <button type="submit" class="btn btn-primary" {{action 'createCheckout'}}>Checkout</button>
		  </div>
		</div>
	</form>
</div>