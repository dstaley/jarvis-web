{{#if model.people}}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">People</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <div class="table-responsive">
	        {{#sortable-table}}
	            <thead>
	                <tr>
	                    <th>Name</th>
	                    <th>Email</th>
	                    <th>LSU ID</th>
	                </tr>
	            </thead>
	            <tbody>
	                {{#each person in model.people}}
	                	<tr>
	                		<td>{{#link-to 'person' person.id}}{{person.first_name}} {{person.last_name}}{{/link-to}}</td>
	                		<td>{{#link-to 'person' person.id}}{{person.email}}{{/link-to}}</td>
	                		<td>{{#link-to 'person' person.id}}{{person.lsu_id}}{{/link-to}}</td>
	                	</tr>
	                {{/each}}
	            </tbody>
	        {{/sortable-table}}
	    </div>
	    <!-- /.table-responsive -->
	</div>
	<!-- /.col-lg-12 -->
</div>
{{/if}}

{{#if model.kits}}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kits</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <div class="table-responsive">
	        {{#sortable-table}}
	            <thead>
	                <tr>
	                    <th>Name</th>
	                    <th>Type</th>
	                    <th>Availability</th>
	                </tr>
	            </thead>
	            <tbody>
	                {{#each kit in model.kits}}
	                	<tr>
	                		<td>{{#link-to 'kit' kit.id}}{{kit.name}}{{/link-to}}</td>
	                		<td>{{#link-to 'kit' kit.id}}{{kit.type}}{{/link-to}}</td>
	                		<td>{{#link-to 'kit' kit.id}}{{#if kit.available}}Available{{else}}Unavailable{{/if}}{{/link-to}}</td>
	                	</tr>
	                {{/each}}
	            </tbody>
	        {{/sortable-table}}
	    </div>
	    <!-- /.table-responsive -->
	</div>
	<!-- /.col-lg-12 -->
</div>
{{/if}}