<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Locations
        {{#link-to 'add-location'}}<button class="btn btn-primary pull-right">Add Location</button>{{/link-to}}
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
	<div class="col-lg-12">
	    <div class="table-responsive">
	        {{#sortable-table}}
	            <thead>
	                <tr>
	                    <th>Name</th>
	                    <th>Room</th>
	                </tr>
	            </thead>
	            <tbody>
	                {{#each location in model.locations}}
	                	<tr>
	                		<td>{{#link-to 'location' location.id}}{{location.name}}{{/link-to}}</td>
	                		<td>{{#link-to 'location' location.id}}{{location.room.name}}{{/link-to}}</td>
	                	</tr>
	                {{/each}}
	            </tbody>
	        {{/sortable-table}}
	    </div>
	    <!-- /.table-responsive -->
	</div>
	<!-- /.col-lg-12 -->
</div>