<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Checkout Details
        {{#if userAuthenticationService.currentUser}}
            {{#unless allReturned}}
                {{#link-to 'return-checkout' model.checkout.id}}<button class="btn btn-primary pull-right">Return Items</button>{{/link-to}}
            {{/unless}}
        {{/if}}
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <h3>Kit: {{#link-to 'kit' model.checkout.kit.id}}{{model.checkout.kit.name}}{{/link-to}}</h3>
        <h3>Person: {{#link-to 'person' model.checkout.patron.id}}{{model.checkout.patron.name}}{{/link-to}}</h3>
        <h3>Checkout Date: {{moment model.checkout.checkout_date}}</h3>
        <h3>Due Date: {{due-date model.checkout.due_date}} {{#unless allReturned}}<button {{action 'renew' model.checkout.id}}>Renew</button>{{/unless}}</h3>
        <h3>Extensions: {{model.checkout.extensions}}</h3>
        <h3>Checked Out By: {{model.checkout.created_by.name}}</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Checkout Items</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Return Date</th>
                        <th>Returned By</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each checkout_item in model.checkout_items.checkout_items}}
                        <tr>
                            <td>{{#link-to 'item' checkout_item.item.id}}{{checkout_item.item.name}}{{/link-to}}</td>
                            <td>{{#if checkout_item.return_date}}{{moment checkout_item.return_date}}{{/if}}</td>
                            <td>{{#if checkout_item.returned_by}}{{checkout_item.returned_by.name}}{{/if}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 -->
</div>
